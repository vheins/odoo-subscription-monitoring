<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Daily Subscription Check -->
        <record id="cron_check_expiring_subscriptions" model="ir.cron">
            <field name="name">Subscription Manager: Check Expiring Subscriptions</field>
            <field name="model_id" ref="model_sm_subscription"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expiring_subscriptions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
        
    </data>
</odoo>
