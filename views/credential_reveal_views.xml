<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_sm_credential_reveal_wizard_form" model="ir.ui.view">
      <field name="name">sm.credential.reveal.wizard.form</field>
      <field name="model">sm.credential.reveal.wizard</field>
      <field name="arch" type="xml">
        <form string="Reveal Credential">
          <sheet>
            <group>
              <field name="password" readonly="1"/>
            </group>
            <footer>
              <button name="copy_to_clipboard" string="Copy to clipboard" type="button" class="btn-primary o_copy_to_clipboard"/>
              <button name="close" string="Close" class="btn-secondary" special="cancel"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
