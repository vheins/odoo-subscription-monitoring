<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Credential Tree View -->
        <record id="view_sm_credential_tree" model="ir.ui.view">
            <field name="name">sm.credential.tree</field>
            <field name="model">sm.credential</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="service_id"/>
                    <field name="credential_type" widget="badge"/>
                    <field name="username"/>
                    <field name="url"/>
                </tree>
            </field>
        </record>
        
        <!-- Credential Form View -->
        <record id="view_sm_credential_form" model="ir.ui.view">
            <field name="name">sm.credential.form</field>
            <field name="model">sm.credential</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="service_id" options="{'no_create': True}"/>
                                <field name="credential_type"/>
                            </group>
                            <group>
                                <field name="username"/>
                                <field name="password" password="True"/>
                                <field name="url"/>
                                <field name="port"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes about this credential..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Credential Search View -->
        <record id="view_sm_credential_search" model="ir.ui.view">
            <field name="name">sm.credential.search</field>
            <field name="model">sm.credential</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="service_id"/>
                    <field name="username"/>
                    <filter string="SSH" name="filter_ssh" domain="[('credential_type', '=', 'ssh')]"/>
                    <filter string="Portal" name="filter_portal" domain="[('credential_type', '=', 'portal')]"/>
                    <filter string="API" name="filter_api" domain="[('credential_type', '=', 'api')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Service" name="group_service" context="{'group_by': 'service_id'}"/>
                        <filter string="Type" name="group_type" context="{'group_by': 'credential_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Credential Action -->
        <record id="action_sm_credential" model="ir.actions.act_window">
            <field name="name">Credentials</field>
            <field name="res_model">sm.credential</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
