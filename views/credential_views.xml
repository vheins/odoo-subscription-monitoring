<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Credential List View -->
        <record id="view_sm_credential_list" model="ir.ui.view">
            <field name="name">sm.credential.list</field>
            <field name="model">sm.credential</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="service_id"/>
                    <field name="credential_type" widget="badge"/>
                    <field name="username"/>
                    <field name="password_mask" string="Secret"/>
                    <field name="password" groups="subscription_monitoring.group_subscription_devops,subscription_monitoring.group_subscription_admin"/>
                    <field name="url"/>
                </tree>
            </field>
        </record>
        
        <!-- Credential Form View -->
        <record id="view_sm_credential_form" model="ir.ui.view">
            <field name="name">sm.credential.form</field>
            <field name="model">sm.credential</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="service_id" options="{'no_open': True}"/>
                                <field name="credential_type"/>
                            </group>
                            <group>
                                <field name="username"/>
                                <field name="password" password="True"/>
                                <field name="url"/>
                                <field name="port"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes about this credential..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Credential Search View -->
        <record id="view_sm_credential_search" model="ir.ui.view">
            <field name="model">sm.credential</field>
            <field name="arch" type="xml">
                <search string="Credentials">
                    <field name="name"/>
                    <field name="service_id"/>
                </search>
            </field>
        </record>
        
        <!-- Credential Action -->
        <record id="action_sm_credential" model="ir.actions.act_window">
            <field name="name">Credentials</field>
            <field name="res_model">sm.credential</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
