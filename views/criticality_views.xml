<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Criticality List View -->
        <record id="view_sm_criticality_list" model="ir.ui.view">
            <field name="name">sm.criticality.list</field>
            <field name="model">sm.criticality</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="alert_days"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>
        
        <!-- Criticality Form View -->
        <record id="view_sm_criticality_form" model="ir.ui.view">
            <field name="name">sm.criticality.form</field>
            <field name="model">sm.criticality</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="level"/>
                            </group>
                            <group>
                                <field name="alert_days"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Criticality Action -->
        <record id="action_sm_criticality" model="ir.actions.act_window">
            <field name="name">Criticality Levels</field>
            <field name="res_model">sm.criticality</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
