<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Service Tree View -->
        <record id="view_sm_service_tree" model="ir.ui.view">
            <field name="name">sm.service.tree</field>
            <field name="model">sm.service</field>
            <field name="arch" type="xml">
                    <tree decoration-danger="subscription_state == 'expired'" 
                        decoration-warning="subscription_state == 'expiring_soon'">
                    <field name="service_icon"/>
                    <field name="name"/>
                    <field name="service_type"/>
                    <field name="partner_id" optional="hide"/>
                    <field name="client_id" optional="show"/>
                    <!-- Import-friendly fields -->
                    <field name="ip_address" optional="show"/>
                    <field name="hostname" optional="hide"/>
                    <field name="location" optional="hide"/>
                    <field name="cpu_cores" optional="hide"/>
                    <field name="memory_value" optional="hide"/>
                    <field name="memory_unit" optional="hide"/>
                    <field name="storage_value" optional="hide"/>
                    <field name="storage_unit" optional="hide"/>
                    <field name="server_spec_display"/>
                    <field name="criticality_id" optional="hide" widget="badge"/>
                    <field name="state" widget="badge"/>
                    <field name="subscription_state" widget="badge" optional="show"/>
                    <field name="next_renewal_date" optional="show"/>
                    <field name="days_left" optional="show"/>
                    <field name="vendor_bills_amount" optional="hide" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                </tree>
            </field>
        </record>
        
        <!-- Service Form View -->
        <record id="view_sm_service_form" model="ir.ui.view">
            <field name="name">sm.service.form</field>
            <field name="model">sm.service</field>
            <field name="arch" type="xml">
                    <form>
                        <header>
                            <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                            <button name="action_add_subscription" type="object" string="Add Subscription" class="oe_highlight"/>
                        </header>
                    <sheet>
                        <!-- Smart Buttons (stat buttons) - similar to res.partner -->
                        <div class="oe_button_box" name="button_box">
                            <!-- All Subscriptions Smart Button -->
                            <button name="action_view_subscriptions" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-repeat"
                                    help="View all subscriptions for this service">
                                <field name="subscriptions_count" widget="statinfo" string="Subscriptions"/>
                            </button>
                            
                            <!-- Active Subscriptions Smart Button -->
                            <button name="action_view_active_subscriptions" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-check-circle"
                                    help="View active subscriptions only">
                                <field name="active_subscriptions_count" widget="statinfo" string="Active"/>
                            </button>
                            
                            <!-- Expired Subscriptions Smart Button -->
                            <button name="action_view_expired_subscriptions" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-times-circle"
                                    help="View expired subscriptions"
                                    invisible="expired_subscriptions_count == 0">
                                <field name="expired_subscriptions_count" widget="statinfo" string="Expired"/>
                            </button>
                            
                            <!-- Vendor Bills Smart Button -->
                            <button name="action_view_vendor_bills" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-file-text-o"
                                    help="View vendor bills related to this service">
                                <field name="vendor_bills_count" widget="statinfo" string="Vendor Bills"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Service Name"/>
                            </h1>
                        </div>
                        <group>
                            <group name="main_info" string="General Information">
                                <field name="service_type"/>
                                <field name="partner_id" options="{'no_open': True}"/>
                                <field name="client_id" options="{'no_open': True}"/>
                            </group>
                            <group name="technical_info" string="Technical Details">
                                <field name="criticality_id" options="{'no_create': True}"/>
                                <field name="ip_address"/>
                                <field name="hostname"/>
                                <field name="location"/>
                            </group>
                            <group name="server_spec" string="Server Specification">
                                <group>
                                    <field name="cpu_cores"/>
                                </group>
                                <group>
                                    <field name="memory_value"/>
                                    <field name="memory_unit"/>
                                </group>
                                <group>
                                    <field name="storage_value"/>
                                    <field name="storage_unit"/>
                                </group>
                                <group>
                                    <field name="server_spec_display" readonly="1"/>
                                </group>
                            </group>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="description"/>
                            </page>
                            <page string="Active Subscription" name="active_subscription">
                                <group>
                                    <group>
                                        <field name="next_renewal_date"/>
                                        <field name="days_left"/>
                                        <field name="subscription_state" widget="badge"/>
                                    </group>
                                    <group>
                                        <field name="active_subscription_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Subscription History" name="subscriptions">
                                <field name="subscription_ids">
                                        <tree>
                                            <field name="date_start"/>
                                            <field name="billing_interval"/>
                                            <field name="next_renewal_date"/>
                                            <field name="amount"/>
                                            <field name="state" widget="badge"/>
                                        </tree>
                                    </field>
                            </page>
                            <page string="Credentials" name="credentials" groups="subscription_monitoring.group_subscription_devops,subscription_monitoring.group_subscription_admin">
                                <field name="credential_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="credential_type"/>
                                        <field name="username"/>
                                        <field name="password" groups="subscription_monitoring.group_subscription_devops,subscription_monitoring.group_subscription_admin"/>
                                        <field name="url"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Service Kanban View -->
        <record id="view_sm_service_kanban" model="ir.ui.view">
            <field name="name">sm.service.kanban</field>
            <field name="model">sm.service</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="service_type"/>
                    <field name="partner_id"/>
                    <field name="criticality_id"/>
                    <field name="state"/>
                    <field name="subscription_state"/>
                    <field name="next_renewal_date"/>
                    <field name="days_left"/>
                    <field name="tag_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="text-muted">
                                            <field name="service_type"/>
                                        </span>
                                    </div>
                                    <span class="float-end">
                                        <field name="criticality_id" widget="badge"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <div>
                                        Vendor: <field name="partner_id"/>
                                    </div>
                                    <div t-if="record.server_spec_display.raw_value">
                                        <strong>Spec:</strong> <field name="server_spec_display"/>
                                    </div>
                                    <div t-if="record.next_renewal_date.raw_value">
                                        Renewal: <field name="next_renewal_date"/>
                                        (<field name="days_left"/> days)
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                            <i class="fa fa-calendar me-1"/>
                                            <span class="text-muted small me-1">Subscription:</span>
                                            <field name="subscription_state" widget="label_selection" 
                                                   options="{'classes': {'active': 'success', 'expiring_soon': 'warning', 'expired': 'danger'}}"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <i class="fa fa-server me-1"/>
                                            <span class="text-muted small me-1">Service:</span>
                                            <field name="state" widget="label_selection"/>
                                        </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Service Search View -->
        <record id="view_sm_service_search" model="ir.ui.view">
            <field name="model">sm.service</field>
            <field name="arch" type="xml">
                <search string="Services">
                    <field name="name"/>
                </search>
            </field>
        </record>
        
        <!-- Service Action -->
        <record id="action_sm_service" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">sm.service</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first service!
                </p>
                <p>
                    Manage your infrastructure services like VPS, Domains, and SSL Certificates here.
                </p>
            </field>
        </record>
        
        <!-- Service Tag Views -->
        <record id="view_sm_service_tag_tree" model="ir.ui.view">
            <field name="name">sm.service.tag.tree</field>
            <field name="model">sm.service.tag</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>
        
        <record id="action_sm_service_tag" model="ir.actions.act_window">
            <field name="name">Service Tags</field>
            <field name="res_model">sm.service.tag</field>
            <field name="view_mode">tree</field>
        </record>
        
    </data>
</odoo>
