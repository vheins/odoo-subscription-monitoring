<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Categories -->
        <record id="module_category_subscription_manager" model="ir.module.category">
            <field name="name">Subscription Manager</field>
            <field name="description">Manage infrastructure subscriptions and monitoring</field>
            <field name="sequence">10</field>
        </record>

        <!-- Groups -->
        
        <!-- Manager (Read-Only) -->
        <record id="group_subscription_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_subscription_manager"/>
            <field name="comment">Read-only access to services and subscriptions for strategic overview</field>
        </record>
        
        <!-- Finance -->
        <record id="group_subscription_finance" model="res.groups">
            <field name="name">Finance</field>
            <field name="category_id" ref="module_category_subscription_manager"/>
            <field name="implied_ids" eval="[(4, ref('group_subscription_manager'))]"/>
            <field name="comment">Manage subscriptions and vendor bills, no access to credentials</field>
        </record>
        
        <!-- DevOps -->
        <record id="group_subscription_devops" model="res.groups">
            <field name="name">DevOps</field>
            <field name="category_id" ref="module_category_subscription_manager"/>
            <field name="implied_ids" eval="[(4, ref('group_subscription_manager'))]"/>
            <field name="comment">Manage services and view credentials, read-only on financial data</field>
        </record>
        
        <!-- Admin -->
        <record id="group_subscription_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_category_subscription_manager"/>
            <field name="implied_ids" eval="[(4, ref('group_subscription_finance')), (4, ref('group_subscription_devops'))]"/>
            <field name="comment">Full access to all subscription management features</field>
        </record>
        
    </data>
</odoo>
