<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Credential Access Rules -->
        <!-- Finance and Manager groups have NO ACCESS to credentials -->
        <record id="credential_rule_finance_deny" model="ir.rule">
            <field name="name">Credentials: Finance - No Access</field>
            <field name="model_id" ref="model_sm_credential"/>
            <field name="groups" eval="[(4, ref('group_subscription_finance'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[(0, '=', 1)]</field>
        </record>
        
        <record id="credential_rule_manager_deny" model="ir.rule">
            <field name="name">Credentials: Manager - No Access</field>
            <field name="model_id" ref="model_sm_credential"/>
            <field name="groups" eval="[(4, ref('group_subscription_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[(0, '=', 1)]</field>
        </record>
        
        <!-- DevOps and Admin have full access to credentials -->
        <record id="credential_rule_devops" model="ir.rule">
            <field name="name">Credentials: DevOps - Full Access</field>
            <field name="model_id" ref="model_sm_credential"/>
            <field name="groups" eval="[(4, ref('group_subscription_devops'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        
        <record id="credential_rule_admin" model="ir.rule">
            <field name="name">Credentials: Admin - Full Access</field>
            <field name="model_id" ref="model_sm_credential"/>
            <field name="groups" eval="[(4, ref('group_subscription_admin'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        
    </data>
</odoo>
